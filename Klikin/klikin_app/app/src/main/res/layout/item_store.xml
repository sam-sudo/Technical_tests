<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="4pt"
    app:cardBackgroundColor="@color/white"
    app:cardMaxElevation="12dp"
    tools:context=".presentation.usescases.shopsList.ShopListActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:orientation="vertical">
        
        <LinearLayout
            android:id="@+id/ll_card_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/imv_categoryIcon"
                    app:tint="@color/white"
                    android:layout_margin="4pt"
                    android:paddingStart="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|end"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_distance"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <ImageView
                    android:src="@mipmap/right_arrow_ico"
                    app:tint="@color/white"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/imgv_shopImg"
                    android:src="@drawable/no_image"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4pt"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_storeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/tv_storeOpenTime"
                    android:textSize="4pt"
                    android:text="De Lunes a Viernes de 07:00 a 21:00 horas; SÃ¡bado de 08:30 a 19:30 horas; Domingo de 10:00 a 14:00 horas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

        </LinearLayout>
        
    </LinearLayout>

</androidx.cardview.widget.CardView>